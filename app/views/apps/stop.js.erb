$('#flash-content').empty();
<%- if flash[:alert] %>
  request_processed = false;
  $('#flash-content').append('<div class="alert"><%= escape_javascript(flash[:alert]) %></div>');
  $('#flash').fadeIn('slow');
<%- else %>
  request_processed = true;
  appsTable.fnDeleteRow($('tr.#app-<%= @name %>').get(0));
  var row = $('#apps-table').append('<%= escape_javascript( render :partial => "apps/app_item", :collection => @updated_app ) %>');
  appsTable.dataTable().fnDestroy();
  appsTable.dataTable(appsTable_Settings);
<%- end %>