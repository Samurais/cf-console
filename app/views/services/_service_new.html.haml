.modalBox{:id => "add_service_modalBox"}
  = form_tag service_create_url, :id => "new-service-form", :remote => true do
    .modalBox-title Add Service
    .modalBox-flash
    .modalBox-content
      %table
        %tbody
          %tr
            %td
              = label_tag "service", "Service:", :class => "legend"
              .tooltip-legend
                %p Select the system service you want to provision.
            %td
              = select_tag :ss, options_for_select(@available_system_services), :required => "required",
               :autofocus => "autofocus", :class => "service-uniform"
              .form-field-error
          %tr
            %td
              = label_tag "name", "Name:", :class => "legend"
              .tooltip-legend
                %p Enter the name that univocally will identify your service.
                %p Must contain only word characters (letter, number, underscore).
                %p Example: redis-service
            %td
              = text_field_tag :name, @name, :size => 30, :required => "required", :pattern => "[a-zA-Z0-9-]+",
                :placeholder => "Provisioned Service Name", :title => "Must contain only word characters: letter, number, hyphen"
              .form-field-error
    .modalBox-submit= submit_tag "Add Service"